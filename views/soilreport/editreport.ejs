

<%- include("../partials/header") %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">update report of soil detail of user: <%= detail.name %>
            </h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/soildetails/<%= detail._id %>/report/<%= report._id %>?_method=PUT" method="POST">

                    <div class="form-group">
                        <textarea class="form-control"  type="text" name="report[report]" placeholder="Write a report"
                            rows="5"><%= report.report %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Submit a report</button>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>