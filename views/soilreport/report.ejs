

    <%- include("../partials/header") %>
        <main class="d-flex align-items-center min-vh-100 py-3 py-md-0 mt-5">
            <div class="container ">
                <div class="container ">
                    <div class="row mt-3">
                        <div class="col-md-8 offset-md-2">
                            <%- include("../partials/message") %>
                        </div>
                    </div>
                </div>
                <div class="card news-card">
                    <div class="row no-gutters">
    
                        <div class="col-md-10 offset-md-1">
                            <div class="card-body">
                                <div class="brand-wrapper">
    
                                </div>
                                <h3 style="text-align: center">Upload report of soil detail of user: <span
                                        style="color: red;">
                                        <%= detail.name %>
                                    </span></h3>
                                <div style="align-items: center;">
                                    <form action="/soildetails/<%= detail_id %>/report" method="POST">
    
    
                                        <div class="form-group">
    
                                        <textarea class="form-control" type="text" name="report[report]" placeholder="Write a report" 
                                           rows="20"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <button class="login-button">Upload Report </button>
                                        </div>
                                    </form>
    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    
        <%- include("../partials/footer") %>