<%- include("../../partials/header") %>
    <div class="mt-3" >
        <div class="row">
           
            <div class="col-md-3 mt-3 p-3" style="background-color: rgb(238, 236, 232);">
                <%- include("../../partials/cropSideBar") %>
            </div>
            <div class="col-md-9" style="background-color: rgb(179, 177, 174);">
                <%if(currentUser.role.includes('admin')){%>
                    <a href="/westbengalcropdetail/new" class="btn btn-success text-center m-5">Add crop detail for west Bengal
                    </a>
                    <%}%>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">product Name</th>
                            <th scope="col">quantity(In Quintal)</th>
                            <th scope="col">Increase (In Quintal)</th>
                            <%if(currentUser.role.includes('admin')){%>
                                <th scope="col">action</th>
                                <%}%>

                    </thead>
                    <tbody>
                        <%cropDetail.forEach(crop=>{%>
                            <tr>

                                <td>
                                    <%=crop.product%>
                                </td>
                                <td>
                                    <%=crop.quantity%>
                                </td>
                                <td>
                                    <%=crop.increase%>
                                </td>
                                <%if(currentUser.role.includes('admin')){%>
                                    <td>
                                        <a class="btn btn-xs btn-warning"
                                            href="/westbengalcropdetail/<%=crop._id %>/edit">update
                                            Detail</a> //
                                        <form id="delete-form" style="display: inline-block;"
                                            action="/westbengalcropdetail/<%=crop._id %>/delete?_method=DELETE" method="POST">
                                            <button class="btn btn-xs btn-danger">Delete </button>
                                        </form>
                                    </td>
                                    <%}%>
                            </tr>
                            <%})%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include("../../partials/footer") %>